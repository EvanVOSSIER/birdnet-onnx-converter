#!/bin/bash
set -e
# Pre-commit hook to format Python files with ruff

# Get list of staged Python files (null-terminated for safe filename handling)
STAGED_PY_FILES=$(git diff --cached --name-only --diff-filter=ACM -z | grep -z '\.py$' || true)

if [ -n "$STAGED_PY_FILES" ]; then
    echo "Formatting staged Python files with ruff..."

    # Check if ruff is available
    if ! command -v ruff &> /dev/null; then
        echo "Warning: ruff not found, skipping format check"
        exit 0
    fi

    # Format the files (using -0 for null-terminated input)
    echo "$STAGED_PY_FILES" | xargs -0 ruff format

    # Re-add the formatted files to staging
    echo "$STAGED_PY_FILES" | xargs -0 git add

    echo "Files formatted and re-staged"
fi

exit 0
